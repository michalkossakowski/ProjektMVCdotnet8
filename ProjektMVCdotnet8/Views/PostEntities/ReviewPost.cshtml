@model ProjektMVCdotnet8.Entities.PostEntity

@{
    ViewData["Title"] = "ReviewPost";
}

<h1 class ="display-4">Zdecyduj co zrobić z postem</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AttachmentSource)
            <img src="/attachments/@Model.AttachmentSource" alt="Alternate Text" />

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AttachmentSource)
        </dd>
    </dl>
</div>
<div>
<form asp-action="ReviewPost">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Usuń post" class="btn btn-danger"/>
</form>
</div>
<div>
    <a asp-controller="ReportPostEntities" asp-action="Index" >Powrót do zgłoszonych postów</a>
</div>
