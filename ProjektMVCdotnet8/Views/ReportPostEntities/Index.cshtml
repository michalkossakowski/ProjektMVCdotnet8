@model IEnumerable<ProjektMVCdotnet8.Entities.ReportPostEntity>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Zgłoszone posty:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.postId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportContent)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.postId)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
